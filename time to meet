import java.util.Arrays;
import java.util.Scanner;

class MyProgram{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int x = sc.nextInt();
        int y = sc.nextInt();
        int t = sc.nextInt();
        int m = sc.nextInt();
        System.out.println(x * t + y * m);
    }
}
