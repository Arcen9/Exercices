import java.util.Scanner;

class MyProgram{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int i = a;
        int ip=1;
        while (i>0) {
            int op=i;
            System.out.print(new String(new char[op-1]).replace("\0", " "));
            System.out.println(new String(new char[ip]).replace("\0", "*"));
            ip+=2;
            i--;
        }
    }
}
