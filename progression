import java.util.Scanner;

class MyProgram{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int n = sc.nextInt();
        int sum = 1 + a;
        for (int i = 2; i <= n; i++) {
            sum += Math.pow(a,i);
        }
        System.out.println(sum);
    }
}
